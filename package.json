{
  "name": "guftgu",
  "version": "0.0.1",
  "description": "Welcome to the collaborative hub for building Guftgu, a chat app designed to foster meaningful connections and conversations.",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/**"
    ]
  },
  "scripts": {
    "dev:web": "lerna run dev:web",
    "build:web": "lerna run build:web",
    "preview:web": "lerna run preview:web",
    "dev:backend": "lerna run dev:backend",
    "start:backend": "lerna run start:backend",
    "start:rn": "lerna run start:rn",
    "android": "lerna run android",
    "ios": "lerna run ios",
    "lint:rn": "lerna run lint:rn",
    "test:rn": "lerna run test:rn",
    "postversion": "cd packages/app/android && ./gradlew bundleRelease",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "clean:rn": "lerna run clean:rn"
  },
  "keywords": [],
  "author": "Ajay Sharma",
  "license": "GNU",
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.2"
  }
}
